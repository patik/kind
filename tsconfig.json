        "target": "es6",
        "lib": ["es2020"],
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist/",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
