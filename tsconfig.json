{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6", "es2020", "dom"],
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist/",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["jest", "node"]
    },
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
